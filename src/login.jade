doctype
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui")
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name="apple-mobile-web-app-status-bar-style", content="black")
    title Iceburgh | Explore Pittsburgh

    // Framework7 Library CSS
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/framework7/1.2.0/css/framework7.ios.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/framework7/1.2.0/css/framework7.ios.colors.min.css")

    // Custom styles
    link(rel="stylesheet", href="css/app.css")

  body
    // Status bar overlay for fullscreen mode
    .statusbar-overlay

    .views
      .view.view-main#login
        .pages
          .page(data-page="login")
            .page-content
              h1.text-center ICEBURGH
              h3.text-center there's more than meets the eye.
              .content-block
                img.login(src="/images/fb.png")

    script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/framework7/1.2.0/js/framework7.min.js")
    script(type="text/javascript", src="js/index.js")
